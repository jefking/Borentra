@using Borentra
@model Borentra.Models.ILocation
<div class="alert">
    <h2>Quickstart</h2>
    <div class="row">
        <div class="col-xs-12">
            <ul class="list-unstyled">
                <li><span class="glyphicon glyphicon-list"></span>&nbsp;<a href="/search/offer" onclick="_gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'Offer']);">explore 1,000's of offers</a></li>
                @if (Model.Latitude == 0 || Model.Longitude == 0)
                {
                    <li><span class="glyphicon glyphicon-cog"></span>&nbsp;<a href="/dashboard/settings" onclick="_gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'Location']);">set your location</a></li>
                }
                else
                {
                    <li><span class="glyphicon glyphicon-cog"></span>&nbsp;<a href="/dashboard/settings" onclick="_gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'Setting']);">update your profile</a></li>
                }
                <li><span class="glyphicon glyphicon-user"></span>&nbsp;<a href="#" onclick="FB.ui({ method: 'apprequests', message: 'Easily borrow, rent, trade on Borentra' }, function () { }); _gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'Facebook']);">invite friends</a></li>
                <li><span class="glyphicon glyphicon-hand-up"></span>&nbsp;<a href="/wanted" onclick="_gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'Wanted']);">help someone out</a></li>
                <li><span class="glyphicon glyphicon-pencil"></span>&nbsp;<a href="/group" onclick="_gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'Group']);">create a group</a></li>
                <li><span class="glyphicon glyphicon-question-sign"></span>&nbsp;<a href="/help" onclick="_gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'Help']);">need help</a></li>
                <li><span class="glyphicon glyphicon-user"></span>&nbsp;<a href="/report/leaderboard" onclick="_gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'LeaderBoard']);">local leaders</a></li>
                <li><span class="glyphicon glyphicon-check"></span>&nbsp;<a href="/dashboard/interests" onclick="_gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'Interests']);">quick add interests</a></li>
                @*
                    <li><span class="glyphicon glyphicon-pencil"></span>&nbsp;<a href="/company" onclick="_gaq.push(['_trackEvent', 'Dashboard', 'Quickstart', 'Company']);">company registration</a></li>
                *@
                @if (User.Identity.IsManager())
                {
                    <li>
                        <span class="glyphicon glyphicon-thumbs-up"></span> <a href="#" onclick="jQuery('.btn-favorite').click()">Admin Like Bomb</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>