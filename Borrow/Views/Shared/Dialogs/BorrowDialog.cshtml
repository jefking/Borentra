<div id="dialogBorrowItem" class="modal fade" tabindex="-1" role="dialog">
  <form id="borrow-item-form">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h3>Borrow this item?</h3>
    </div>
    <div class="modal-body">
      <input type="hidden" id="itemId" name="itemId" value="" />

      <div class="row">
        <div class="col-md-6">
          <h5>Borrow on?</h5>

 
          <div class="input-group date" id="borrow-on" name="borrowOn" data-date="@DateTime.Now.ToShortDateString()" data-date-format="mm/dd/yyyy">
            <input class="form-control" size="16" type="text" value="@DateTime.Now.ToShortDateString()" readonly="">
            <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
          </div>
        </div>

        <div class="col-md-6">
          <h5>Until?</h5>
          <div class="input-group date" id="borrow-until" name="borrowUntil" data-date="@DateTime.Now.ToShortDateString()" data-date-format="mm/dd/yyyy">
            <input class="form-control" size="16" type="text" value="@DateTime.Now.AddDays(7).ToShortDateString()" readonly="">
            <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
          </div>
        </div>

      </div>
      <h4>Comment</h4>
      <textarea class="form-control" id="comment" placeholder="Lets meet at our favorite coffee shop tonight." rows="5" maxlength="1000"></textarea>
    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-primary" data-loading-text="Working it! Please wait!" onclick="_gaq.push(['_trackEvent', 'Dialogue', 'Borrow', 'Requested']);">Confirm</button>
    </div>
  </form>
</div>
