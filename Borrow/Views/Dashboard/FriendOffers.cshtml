@model Borentra.Models.DashboardInfo<IEnumerable<Borentra.Models.Item>>

@{
    ViewBag.Title = "Your Friends Offers | Borentra: Borrow, Rent, Trade";
    Layout = "~/Views/Shared/Layouts/_LoggedInLayout.cshtml";
}

<div class="dashboard dashboard-friends borentra-view">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-header">
                    <h1><span class="glyphicon glyphicon-user"></span>&nbsp; Your Friends Offers <small>@Model.Info.Count()</small></h1>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-xs-10">
                @if (null != Model.Info && 0 < Model.Info.Count())
                {
                    @Html.Partial("~/Views/Shared/_Things.cshtml", Model.Info)
                }
                else
                {
                    <div class="alert alert-info">
                        <h4><span class="glyphicon glyphicon-info-sign"></span>&nbsp;Your friends don't got nothing!</h4>
                        <p>Invite your friends, and get them sharing!</p>
                    </div>
                }
            </div>
            <div class="col-xs-2">
                @Html.Partial("~/Views/Shared/Dashboard/_Menu.cshtml", Model)
            </div>
        </div>
    </div>
</div>