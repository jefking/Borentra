@using Borentra;

@model Borentra.Models.DashboardInfo<Borentra.Models.Item>
@{
    ViewBag.Title = "Edit Offer | Borentra: Borrow, Rent, Trade";
    Layout = "~/Views/Shared/Layouts/_LoggedInLayout.cshtml";
}

<div class="dashboard dashboard-edit-item">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-header">
                    <h1><span class="glyphicon glyphicon-pencil"></span>&nbsp; Edit Offer</h1>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="container">
        <div class="col-xs-10">
            <form id="quick-edit-item-form" action="/api/Product/UploadImage">
                <input type="hidden" id="itemId" name="itemId" value="@Model.Info.Identifier" />
                <h4>Title</h4>
                <input type="text" id="item-title" class="form-control" value="@Model.Info.Title" placeholder="A luxurious cat tuxedo!" maxlength="256" required>

                <h4>Description</h4>
                <textarea class="form-control" id="item-description" placeholder="Describe your item and add #hashtags!" rows="8" maxlength="1024">@Model.Info.Description</textarea>
                <br />

                <div class="row">
                    <div class="col-xs-5">
                        <select id="item-free-privacy" class="form-control">
                            @Html.SelectOption("Give away", 1, (int)Model.Info.FreePrivacyLevel)
                            @Html.SelectOption("Give to a friend", 3, (int)Model.Info.FreePrivacyLevel)
                            @Html.SelectOption("Not free", 4, (int)Model.Info.FreePrivacyLevel)
                        </select>
                    </div>
                    <div class="col-xs-5">
                        <select id="item-share-privacy" class="form-control">
                            @Html.SelectOption("Lend", 1, (int)Model.Info.SharePrivacyLevel)
                            @Html.SelectOption("Lend to a friend", 3, (int)Model.Info.SharePrivacyLevel)
                            @Html.SelectOption("Not lending", 4, (int)Model.Info.SharePrivacyLevel)
                        </select>
                    </div>
                    <br />
                    <div class="col-xs-5">
                        <select id="item-trade-privacy" class="form-control">
                            @Html.SelectOption("Tradeable", 1, (int)Model.Info.TradePrivacyLevel)
                            @Html.SelectOption("Trade with a friend", 3, (int)Model.Info.TradePrivacyLevel)
                            @Html.SelectOption("Not tradeable", 4, (int)Model.Info.TradePrivacyLevel)
                        </select>
                    </div>
                    <div class="col-xs-5">
                        <select id="item-rent-privacy" class="form-control">
                            @Html.SelectOption("Renting", 1, (int)Model.Info.RentPrivacyLevel)
                            @Html.SelectOption("Rent to a friend", 3, (int)Model.Info.RentPrivacyLevel)
                            @Html.SelectOption("Not renting", 4, (int)Model.Info.RentPrivacyLevel)
                        </select>
                        <input type="text" name="price" id="price" class="form-control" value="@Model.Info.Price.ToString("0.00")" />
                        <input type="hidden" name="unit" id="unit" value="1" />
                    </div>
                </div>
                @*<h4>Photos <span class="badge badge-info photos-count">0</span></h4>
                <ul class="thumbnails items"></ul>*@
                <a href="#" class="btn btn-danger btn-dialog-delete-item2" title="Delete" onclick="_gaq.push(['_trackEvent', 'Item', 'Delete', 'Item']);">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
                <button type="submit" class="btn btn-primary btn-success" data-loading-text="Saving Item Information! Please wait!" onclick="_gaq.push(['_trackEvent', 'Dialogue', 'Item', 'Save']);"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Save</button>
            </form>
            @*<div class="col-md-4">
                <ul class="list-unstyled item-operations-menu">
                    <li>
                        <form action="/api/Product/UploadImage" method="post" class="upload-photos">
                            <div class="upload-form-ui">
                                <input class="item-files" type="file" name="files[]" multiple>
                                <input type="hidden" name="identifier" value="@Model.Info.Identifier" />
                                <div class="drag-drop-target upload-content">
                                    <span class="glyphicon glyphicon-cloud-upload"></span>
                                    <h5>Drag photos here!</h5>
                                </div>
                            </div>
                            <div class="hide progress progress-striped active">
                                <div class="bar" style="width: 0%;"></div>
                            </div>
                            <div class="alert hide alert-info">
                                Please wait while we upload your photos!
                            </div>
                        </form>
                    </li>
                </ul>
            </div>*@
        </div>
        <div class="col-xs-2">
            @Html.Partial("~/Views/Shared/Dashboard/_Menu.cshtml", Model)
        </div>
    </div>
</div>