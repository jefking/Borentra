@using Borentra

@model Borentra.Models.DashboardInfo<Borentra.Models.MyProfile>
@{
    ViewBag.Title = "Community Interests | Borentra: Borrow, Rent, Trade";

    ViewBag.ThumbnailWidth = "100";
    Layout = "~/Views/Shared/Layouts/_LoggedInLayout.cshtml";

    ViewBag.Theme = ViewBag.Theme ?? "books";
    var currentInterest = ViewBag.Theme;
    var booksCss = currentInterest == "books" ? "active" : null;
    var toolsCss = currentInterest == "tools" ? "active" : null;
    //var halloweenCss = currentInterest == "halloween" ? "active" : null;
    var gamingCss = currentInterest == "gaming" ? "active" : null;
    var xbox360Css = currentInterest == "xbox360" ? "active" : null;
    var ps3Css = currentInterest == "ps3" ? "active" : null;
    var magicCss = currentInterest == "magicthegathering" ? "active" : null;
    var pokemonCss = currentInterest == "pokemon" ? "active" : null;
}

<div class="borentra-view dashboard dashboard-home">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1><span class="glyphicon glyphicon-check"></span>&nbsp;Interests</h1>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-xs-10">
                <div class="row">

                    <div class="col-md-4">
                        <h4>Lifestyle</h4>
                        <ul class="nav nav-pills nav-stacked">
                            <li class="@booksCss ">
                                <a href="/dashboard/interests/books">Books</a>
                            </li>
                            <li class="@toolsCss ">
                                <a href="/dashboard/interests/tools">Tools</a>
                            </li>
                        </ul>

                        @*<h4>Seasonal</h4>
                            <ul class="nav nav-pills nav-stacked">
                              <li class="@rootCss">
                                <a href="/dashboard/interests/halloween">Halloween</a>
                              </li>
                            </ul>*@

                        <h4>Entertainment</h4>
                        <ul class="nav nav-pills nav-stacked">
                            <li class="@pokemonCss">
                                <a href="/dashboard/interests/pokemon">Pokemon: Trading Card Game</a>
                            </li>
                            <li class="@magicCss">
                                <a href="/dashboard/interests/magicthegathering">Magic: The Gathering</a>
                            </li>
                            <li class="@xbox360Css">
                                <a href="/dashboard/interests/xbox360">Microsoft XBOX 360</a>
                            </li>
                            <li class="@ps3Css">
                                <a href="/dashboard/interests/ps3">Sony Playstation 3</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-8">
                        @Html.Partial("Dashboard/_QuickAddWidget")
                    </div>
                </div>
            </div>
            <div class="col-xs-2">
                @Html.Partial("~/Views/Shared/Dashboard/_Menu.cshtml", Model)
            </div>
        </div>
    </div>
</div>
