@model Borentra.Models.DashboardInfo<Borentra.Models.MyProfile>
@{
  ViewBag.Title = "My Trades | Borentra: Borrow, Rent, Trade";
  Layout = "~/Views/Shared/Layouts/_LoggedInLayout.cshtml";
}

<div class="dashboard dashboard-trades borentra-view">

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="page-header">
          <h1><span class="glyphicon glyphicon-retweet"></span>&nbsp; Your Trades <small>@(@Model.Info.PendingTradeRequests.Count() + @Model.Info.TradeRequests.Count()) trade(s) found</small></h1>
        </div>
      </div>
    </div>
  </div>

  <hr />
  <div class="container">
    <div class="row">

      <div class="col-xs-10">

        <div class="component trade-management-component">

          <h4>Trades Received <small>@Model.Info.PendingTradeRequests.Count() trade requests</small></h4>

          @if (null != Model.Info.PendingTradeRequests && 0 < Model.Info.PendingTradeRequests.Count())
          {

            @Html.Partial("~/Views/Shared/_TradeRequestsReceivedTableView.cshtml", Model.Info.PendingTradeRequests)
          }
          else
          {
            <div class="alert alert-info">
              <h4><span class="glyphicon glyphicon-info-sign"></span>&nbsp;Trades Received</h4>
              <p>You currently have 0 trade requests received. Trading allows you to swap things with other people on the platform! If you wish to trade with someone, you can feel free to visit their profile and hit the "Trade" button!</p>
            </div>
          }

          <hr />
          <h4>Trades Sent <small>@Model.Info.TradeRequests.Count()</small></h4>

          @if (null != Model.Info.TradeRequests && 0 < Model.Info.TradeRequests.Count())
          {
            @Html.Partial("~/Views/Shared/_TradeRequestsSentTableView.cshtml", Model.Info.TradeRequests)
          }
          else
          {
            <div class="alert alert-info">
              <h4><span class="glyphicon glyphicon-info-sign"></span>&nbsp;Trades Sent</h4>
              <p>You currently have 0 trade requests sent. Trading allows you to swap things with other people on the platform! If you wish to trade with someone, you can feel free to visit their profile and hit the "Trade" button!</p>
            </div>
          }
        </div>
      </div>
      <div class="col-xs-2">
        @Html.Partial("~/Views/Shared/Dashboard/_Menu.cshtml", Model)

      </div>


    </div>
  </div>

</div>
