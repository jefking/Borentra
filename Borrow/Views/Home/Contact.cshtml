@using Borentra
@{
    ViewBag.Title = "Contact the Borentra team";
    ViewBag.Description = "Borrow, Rent, Trade; from your friends & local community!";
    Layout = "~/Views/Shared/Layouts/_ContentLayout.cshtml";
    ViewBag.DisableJavaScript = true;
}

<section class="main-content">
    <div class="container marketing-content">
        <h1>Contact Us <small>We're Friendly!</small></h1>
        <div class="content-container">
            <hr />
            <div class="row">
                <div class="col-xs-12">
                    <div class="info well text-center">
                        <h4>We are here to help you.</h4>
                        <br />
                        Please choose from the options below; we love helping our community!
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-xs-4">
                    <h3>Support</h3>
                    <p>If you are having any problems at all please don't hesitate to contact us: <a href="mailto:jef@borentra.com" onclick="_gaq.push(['_trackEvent', 'Offsite', 'Mail', 'Support']);">Now</a>.</p>
                </div>
                <div class="col-xs-4">
                    <h3>Feedback</h3>
                    <p>Do you have some feedback? A good idea? We would love to hear from you: <a href="mailto:jef@borentra.com" onclick="_gaq.push(['_trackEvent', 'Offsite', 'Mail', 'Feedback']);">Share with us</a>.</p>
                </div>
                <div class="col-xs-4">
                    <h3>Investors</h3>
                    <p>
                        Make contact for more: <a href="mailto:jef@borentra.com" onclick="_gaq.push(['_trackEvent', 'Offsite', 'Mail', 'Investment']);">Information</a>.
                        <br />
                        Also check out: <a href="https://angel.co/borentra-services-inc" target="_blank" onclick="_gaq.push(['_trackEvent', 'Offsite', 'Link', 'AngelCo']);">Angel List</a>.
                    </p>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-xs-2 text-center">
                    <a href="https://www.facebook.com/Borentra" target="_blank" rel="publisher" onclick="_gaq.push(['_trackEvent', 'Offsite', 'Link', 'Facebook']);">
                        <img src="@Url.ContentCdn("~/assets/img/facebook_small.jpg")" title="Join us on Facebook" width="40px" />
                    </a>
                </div>
                <div class="col-xs-2 text-center">
                    <a href="https://twitter.com/Borentra" target="_blank" rel="publisher" onclick="_gaq.push(['_trackEvent', 'Offsite', 'Link', 'Twitter']);">
                        <img src="@Url.ContentCdn("~/assets/img/twitter_logo.jpg")" title="Follow us on Twitter" width="40px" />
                    </a>
                </div>
                <div class="col-xs-2 text-center">
                    <a href="https://plus.google.com/106550752085264387024" target="_blank" rel="publisher" onclick="_gaq.push(['_trackEvent', 'Offsite', 'Link', 'Facebook']);">
                        <img src="@Url.ContentCdn("~/assets/img/google_plus.png")" title="Join us on Google Plus" width="40px" />
                    </a>
                </div>
                <div class="col-xs-2 text-center">
                    <a href="http://instagram.com/borentragram" target="_blank" rel="publisher" onclick="_gaq.push(['_trackEvent', 'Offsite', 'Link', 'Instagram']);">
                        <img src="@Url.ContentCdn("~/assets/img/instagram.jpg")" title="Join us on Instagram" width="40px" />
                    </a>
                </div>
                <div class="col-xs-2 text-center">
                    <a href="http://borentra.tumblr.com" target="_blank" rel="publisher" onclick="_gaq.push(['_trackEvent', 'Offsite', 'Link', 'Tumblr']);">
                        <img src="@Url.ContentCdn("~/assets/img/tumblr.png")" title="Join us on Tumblr" width="40px" />
                    </a>
                </div>
            </div>
            <hr>
            <p>&nbsp;</p>
        </div>

    </div>
</section>
