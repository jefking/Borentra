@{
    ViewBag.Title = "Company Sign up | Borentra™: Borrow, Rent, Trade";
    ViewBag.Description = "Your online rental storefront";
    Layout = "~/Views/Shared/Layouts/_ContentLayout.cshtml";
}
<section class="main-content">
    <div class="container marketing-content">
        <div class="page-header">
            <h1>Organization Sign Up</h1>
        </div>
        <form>
            Email: <input class="form-control" name="email" id="email" type="email" required />
            <br />
            Password: <input class="form-control" name="password" id="password" type="password" required />
            <br />
            Confirm Password:<input class="form-control" name="passwordConfirm" id="passwordConfirm" type="password" required />
            <br />
            <input type="submit" />
        </form>
    </div>
</section>